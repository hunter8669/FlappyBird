language = "python3"
run = "cd backend && pip install -r requirements_cloud.txt && python simple_server_cloud.py"

[packager]
language = "python3"
ignoredPackages = ["unit_tests"]

[packager.features]
enabledForHosting = false
packageSearch = true
guessImports = true

modules = ["python-3.11"]

[nix]
channel = "stable-22_11"
packages = ["SDL2", "SDL2_image", "SDL2_mixer", "SDL2_ttf", "fontconfig", "freetype", "libjpeg", "libpng", "pkg-config", "portmidi"]

[[ports]]
localPort = 8000
externalPort = 80
